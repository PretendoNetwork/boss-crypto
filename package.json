{
  "name": "@pretendonetwork/boss-crypto",
  "version": "1.1.3",
  "description": "TypeScript crypto functions for creating and working with WiiU and 3DS BOSS files",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PretendoNetwork/boss-crypto.git"
  },
  "scripts": {
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "build": "tsup && tsc --noEmit",
    "test": "npx vitest run"
  },
  "license": "LGPL-3.0-only",
  "devDependencies": {
    "@pretendonetwork/eslint-config": "^0.1.3",
    "@types/node": "^20.5.0",
    "dotenv": "^8.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "exports": {
    ".": {
      "types": "./dist/boss.d.cts",
      "import": "./dist/boss.js",
      "require": "./dist/boss.cjs"
    },
    "./3ds": {
      "types": "./dist/3ds.d.cts",
      "import": "./dist/3ds.js",
      "require": "./dist/3ds.cjs"
    },
    "./wiiu": {
      "types": "./dist/wiiu.d.cts",
      "import": "./dist/wiiu.js",
      "require": "./dist/wiiu.cjs"
    }
  }
}
